extends ../layouts/common.pug

block content
	h1.mt-4 Products

	nav.d-flex.justify-content-end
		ul.pagination
			li.page-item( class = (x === 0) ? "disabled" : "")
				a.page-link(href='?page=' + arrs[(x-1 < 0) ? 0 : x-1][2]) Previous
			
			each arr in arrs[x]
				li.page-item( class = (arr === page) ? "active" : "")
					a.page-link(href='?page=' + arr)= arr
			
			li.page-item( class = (x === totalPagis-1) ? "disabled" : "")
				a.page-link(href='?page=' + arrs[(x+1 > totalPagis-1) ? totalPagis-1 : x+1][0]) Next

	.row
		each product in products
			.col-sm-6.col-md-4.col-lg-3
				.card.mb-4
					img.card-img-top(src=product.image)
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						a.btn.btn-primary(href='/products/' + product.id) Add to cart